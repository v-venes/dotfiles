# Change window focus
lcmd - j : yabai -m window --focus south
lcmd - k : yabai -m window --focus north
lcmd - h : yabai -m window --focus west
lcmd - l : yabai -m window --focus east

lcmd - down : yabai -m window --focus south
lcmd - up : yabai -m window --focus north
lcmd - left : yabai -m window --focus west
lcmd - right : yabai -m window --focus east

# Change focus between external displays
lcmd - s : yabai -m display --focus west
lcmd - g : yabai -m display --focus east

# Move window between external displays
shift + lcmd - s : yabai -m window --display west; yabai -m display --focus west
shift + lcmd - g : yabai -m window --display east; yabai -m display --focus east

# Toggle floating
shift + lcmd - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Maximize window
lcmd - f : yabai -m window --toggle zoom-fullscreen

# Swap window
shift + lcmd - j : yabai -m window --swap south
shift + lcmd - k : yabai -m window --swap north
shift + lcmd - h : yabai -m window --swap west
shift + lcmd - l : yabai -m window --swap east

# Move window to space #
shift + lcmd - 1 : yabai -m window --space 1
shift + lcmd - 2 : yabai -m window --space 2
shift + lcmd - 3 : yabai -m window --space 3
shift + lcmd - 4 : yabai -m window --space 4
shift + lcmd - 5 : yabai -m window --space 5
shift + lcmd - 6 : yabai -m window --space 6
shift + lcmd - 7 : yabai -m window --space 7
shift + lcmd - 8 : yabai -m window --space 8
shift + lcmd - 9 : yabai -m window --space 9

